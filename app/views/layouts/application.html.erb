
<!DOCTYPE html>
<html>
  <head>
    <title>Help Y</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
        <a class="navbar-brand" href="<%= root_url %>"/>Home</a>
        <% if logged_in? %>
          <%= link_to "Your account", user_path(current_user), class: ["navbar-brand","user-link"] %>
          <%= link_to "Log out", logout_path, method: 'post', class: "navbar-brand"%>
          <%= link_to 'All available volunteer opportunities', available_appointments_path, class: "navbar-brand" %>
        <% else %>
          <%= link_to "Sign in with Github", '/auth/github', class: "navbar-brand" %>
          <%= link_to "Log in", root_path, class: "navbar-brand" %>
          <%= link_to "Create a new account", new_user_path, class: "navbar-brand" %>
        <% end %>
        <%= link_to 'All posts', posts_path, class: "navbar-brand" %>
        </div>
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav">

          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>

    <!-- content -->
    <div class="container"  role="main">
      <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>"><%= value %></div>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>