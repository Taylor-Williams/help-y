<% if is_current_user?(@user) %>
  <h3>Your Account</h3>
  <%= render "form" %>
  <%= link_to "Create Post", new_post_path %>
<% else %>
  <p><%= "User's name: #{@user.name}" %></p>
  <p><%= "email: #{@user.email}" %></p>
  <p><%= "height: #{@user.height}" if !@user.height.empty? %></p>
  <p><%= "age: #{@user.age}" if @user.age %></p>
  <p><%= "bio: #{@user.bio}" if !@user.bio.empty? %></p>
  <br>
<% end %>
<% if @user.posts.any? %>
  <p><%= is_current_user?(@user) ? "your" : "#{@user.name}'s"%> posts:</p>
  <%= render @user.posts %>
<% end %>
<% if is_current_user?(@user) %>
  <%= button_to 'Delete User', user_path(@user), method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>