<%= form_for([@post, comment]) do |f| %>
  <%= f.hidden_field :user_id, :value => current_user %>
  <%= f.hidden_field :post_id, :value => @post.id %>
  <%= f.text_area :content, size: "100x10" %>
  <%= f.submit %>
<% end %>
<% if comment.id %>
  <%= button_to 'Delete Comment', post_comment_path(comment), method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>