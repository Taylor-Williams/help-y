<% if is_current_user?(@post.user) %>
  <%= render 'form' %>
<% else %>
  <%= render 'display_info' %>
<% end %>
<%= render partial: "comments/comment", collection: @comments %><br>
<%= render partial: "appointments/appointment", collection: @appointments %><br>
<%= button_to "Create a new appointment", new_post_appointment_path(@post), method: :get %>
<% if is_current_user?(@post.user) %>
  <%= button_to 'Delete Post', post_path(@post), method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>