<% if is_current_user?(@post.user) %>
  <%= render 'form' %>
<% else %>
  <h3><%= @post.title %></h3><br>
  <div><%= @post.content %></div><br>
  <%= link_to "See author's page", user_path(@post.user) %><br>
<% end %>
<%= render partial: "appointments/appointment", collection: @appointments %><br>
<%= render partial: "comments/comment", collection: @comments %><br>
<% if is_current_user?(@post.user) %>
  <%= link_to 'Delete', post_path(@post), method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>