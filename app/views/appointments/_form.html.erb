<%= content_tag(:div, class:["post_appointment_form"]) do %>
  <%= form_for([@post, appointment]) do |f| %>
    <%= f.hidden_field :post_id, :value => @post.id %>
    <p>
      <%= f.label :title %> <%= f.text_field :title %> 
      <%= f.label :spots %> <%= f.text_field :spots %>
    </p>
    <p>
      <%= f.label :start_date %> <%= f.datetime_select :start_date %> 
      <%= f.label :end_date %> <%= f.datetime_select :end_date %> 
    </p>
    <p><%= f.label :info %><br><%= f.text_area :info, size: "100x10" %></p>
    <%= f.submit %>
  <% end %><br>
  <%= button_to 'Delete Appointment', post_appointment_path(appointment), method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>